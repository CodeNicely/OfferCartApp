<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_shop_primary"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@color/white_line"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="8dp"
                android:text="Subscription Title"
                android:textColor="@color/color_shop_primary"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:weightSum="10">

                <TextView
                    android:id="@+id/validity"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_weight="5"
                    android:text="" />


                <TextView
                    android:id="@+id/cost"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_weight="5"
                    android:text="@string/Rs" />

            </LinearLayout>

            <TextView
                android:id="@+id/description"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible" />

            <Button
                android:id="@+id/register"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/padding_medium"
                android:background="@drawable/shop_sign_up_button"
                android:padding="@dimen/padding_medium"
                android:text="@string/buy_now"
                android:textColor="@color/white_line" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
