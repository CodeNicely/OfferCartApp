    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:orientation="vertical"
        android:layout_marginBottom="8dp"
        android:padding="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="20"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_weight="3"
                android:id="@+id/backButton"
                android:src="@drawable/ic_arrow_back_white_24dp"
                android:layout_height="match_parent"/>
            <TextView
        android:layout_width="fill_parent"
        android:layout_weight="14"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Shop Profile"
        android:textAllCaps="true"
        android:textColor="@color/white_line"
        android:textSize="18dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_weight="3"
                android:id="@+id/editButton"
                android:src="@drawable/ic_border_color_white_24dp"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appBarLayout">

        <android.support.v7.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_margin="4dp"
            app:cardBackgroundColor="@color/white_line"
            card_view:cardCornerRadius="8dp"
            card_view:contentPadding="8dp">

            <LinearLayout
                android:id="@+id/contactUsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ProgressBar
                        android:id="@+id/imageProgressBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true" />


                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="250dp"
                        android:maxHeight="400dp"
                        android:padding="4dp"
                        android:layout_margin="4dp"
                        android:contentDescription="@string/shop_image"
                        android:src="@drawable/brand_store_logo_white" />



                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="4dp"
                    android:textSize="16dp"
                    android:id="@+id/shop_name"
                    android:textColor="@color/color_shop_primary"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="4dp"
                    android:textSize="16dp"
                    android:id="@+id/shop_description"
                    android:textColor="@color/color_shop_primary"
                    />



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="4dp"
                    android:textSize="16dp"
                    android:id="@+id/phone_number"
                    android:textColor="@color/color_shop_primary"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="4dp"
                    android:textSize="16dp"
                    android:id="@+id/shop_address"
                    android:textColor="@color/color_shop_primary"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="4dp"
                    android:textSize="16dp"
                    android:id="@+id/shop_category"
                    android:textColor="@color/color_shop_primary"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="4dp"
                    android:textSize="16dp"
                    android:id="@+id/shop_city"
                    android:textColor="@color/color_shop_primary"
                    />

             <!--   <Button
                    android:id="@+id/edit_profile_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Edit Shop Profile"
                    android:textAllCaps="false"/>
-->
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </ScrollView>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        />
</RelativeLayout>



