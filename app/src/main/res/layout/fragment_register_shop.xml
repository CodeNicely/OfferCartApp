    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="30dp"
    android:layout_marginTop="-60dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAllCaps="true"
        android:gravity="center"
        android:textColor="@color/color_shop_accent"
        android:text="@string/shop_signup_textview"
        android:textSize="@dimen/medium_text_size"
        android:layout_marginTop="10dp"
        android:layout_margin="20dp"
        />

        <ScrollView
            android:layout_width="match_parent"
            android:background="@color/colorAccent"
            android:id="@+id/scrollView"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/color_shop_primary"
                android:padding="8dp">


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:textColorHint="@color/color_shop_accent"
                    app:hintTextAppearance="@style/EditTextLayoutTheme"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_shop_accent"
                        android:textColorHint="@color/color_shop_accent"
                        android:theme="@style/EditTextTheme"
                        android:hint="@string/hint_name" />
                    </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    app:hintTextAppearance="@style/EditTextLayoutTheme"
                    android:textColorHint="@color/color_shop_accent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_mobile"
                        android:inputType="phone"
                        android:textColor="@color/color_shop_accent"
                        android:textColorHint="@color/color_shop_accent"
                        android:theme="@style/EditTextTheme"
                        android:maxLength="10"
                        />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    app:hintTextAppearance="@style/EditTextLayoutTheme"
                    android:textColorHint="@color/color_shop_accent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/password"
                        android:textColor="@color/color_shop_accent"
                        android:textColorHint="@color/color_shop_accent"
                        android:theme="@style/EditTextTheme"
                        android:inputType="textPassword" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    app:hintTextAppearance="@style/EditTextLayoutTheme"
                    android:textColorHint="@color/color_shop_accent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/confirm_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/confirm_password"
                        android:textColor="@color/color_shop_accent"
                        android:textColorHint="@color/color_shop_accent"
                        android:theme="@style/EditTextTheme"
                        android:inputType="textPassword" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:textColorHint="@color/color_shop_accent"
                    app:hintTextAppearance="@style/EditTextLayoutTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:textColor="@color/color_shop_accent"
                        android:textColorHint="@color/color_shop_accent"
                        android:theme="@style/EditTextTheme"
                        android:hint="@string/description"
                        android:minHeight="100dp" />

                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:textColorHint="@color/color_shop_accent"
                    app:hintTextAppearance="@style/EditTextLayoutTheme"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_shop_accent"
                        android:textColorHint="@color/color_shop_accent"
                        android:theme="@style/EditTextTheme"
                        android:hint="@string/hint_email" />

                </android.support.design.widget.TextInputLayout>


                <Spinner
                    android:id="@+id/category_spinner"
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/color_shop_accent"
                    android:layout_height="wrap_content"
                    />

                <Spinner
                    android:id="@+id/city_spinner"
                    android:backgroundTint="@color/color_shop_accent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <ImageView
                    android:id="@+id/imageView"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:contentDescription="@string/shop_image"
                    android:maxHeight="250dp"
                    android:minHeight="100dp"
                    android:padding="8dp"
                    android:src="@drawable/brand_store_logo_white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <Button
                        android:id="@+id/galleryButton"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_margin="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:text="@string/select_images_gallery"
                        android:textColor="@color/color_shop_accent"
                        android:background="@drawable/shop_sign_up_button"

                        />

                    <Button
                        android:id="@+id/cameraButton"
                        android:layout_margin="12dp"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:textColor="@color/color_shop_accent"
                        android:background="@drawable/shop_sign_up_button"

                        android:text="@string/take_picture" />

                </LinearLayout>


                <Button
                    android:id="@+id/registerShop"
                    style="@style/Base.Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="12dp"
                    android:text="@string/register_shop"
                    android:textColor="@color/color_shop_accent"
                    android:background="@drawable/shop_sign_up_button"

                />

            </LinearLayout>
        </ScrollView>
</LinearLayout>

</RelativeLayout>