<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_shop_primary"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:orientation="vertical"
        android:id="@+id/linearlayout"

        android:padding="0dp">



        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_shop_primary"
                android:navigationIcon="@drawable/ic_arrow_back_white_24dp"
                android:title="@string/shop_profile"
                android:titleTextColor="@color/white"
                app:navigationIcon="@drawable/ic_arrow_back_white_24dp"
                app:title="@string/shop_signup_textview"
                app:titleTextColor="@color/white"

                />

        </android.support.design.widget.AppBarLayout>

        <!--    <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="20"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_weight="4"
                    android:id="@+id/backButton"
                    android:src="@drawable/ic_arrow_back_white_24dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="16"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="Sign Up"
                    android:textAllCaps="true"
                    android:textColor="@color/white_line"
                    android:textSize="18dp" />

            </LinearLayout>-->
        <android.support.v7.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            app:cardBackgroundColor="@color/white_line"
            app:cardCornerRadius="8dp"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:orientation="vertical"
        android:padding="4dp">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="4dp">


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/black"
                    app:hintTextAppearance="@style/EditTextLayoutTheme">

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_name"
                        android:textColor="@color/color_shop_primary"
                        android:textColorHint="@color/black"
                        android:theme="@style/EditTextTheme"
                        />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/black"
                    app:hintTextAppearance="@style/EditTextLayoutTheme">

                    <EditText
                        android:id="@+id/mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_mobile"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:textColor="@color/color_shop_primary"
                        android:textColorHint="@color/black"
                        android:theme="@style/EditTextTheme" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/black"
                    app:hintTextAppearance="@style/EditTextLayoutTheme">

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:inputType="textPassword"
                        android:hint="Password"
                        android:textColor="@color/color_shop_primary"
                        android:textColorHint="@color/black"
                        android:theme="@style/EditTextTheme" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/black"
                    app:hintTextAppearance="@style/EditTextLayoutTheme">

                    <EditText
                        android:id="@+id/confirm_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/confirm_password"
                        android:inputType="textPassword"
                        android:textColor="@color/color_shop_primary"
                        android:textColorHint="@color/black"
                        android:theme="@style/EditTextTheme" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/black"
                    app:hintTextAppearance="@style/EditTextLayoutTheme">

                    <EditText
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:hint="Shop Description (Optional)"
                        android:minHeight="100dp"
                        android:textColor="@color/color_shop_primary"
                        android:textColorHint="@color/black"
                        android:theme="@style/EditTextTheme" />

                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/black"
                    app:hintTextAppearance="@style/EditTextLayoutTheme">

                    <EditText
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_email"
                        android:textColor="@color/color_shop_primary"
                        android:textColorHint="@color/black"
                        android:theme="@style/EditTextTheme" />

                </android.support.design.widget.TextInputLayout>


                <Spinner
                    android:id="@+id/category_spinner"
                    android:layout_width="match_parent"
                    android:layout_margin="8dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black"
                    />
                <Spinner
                    android:id="@+id/state_spinner"
                    android:layout_width="match_parent"
                    android:layout_margin="8dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black"
                    />

                <Spinner
                    android:id="@+id/city_spinner"
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black"
                    />



                <TextView
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:id="@+id/latitude_longitude"
                    android:textColor="@color/white_line"/>
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="250dp"
                    android:maxHeight="400dp"
                    android:contentDescription="@string/shop_image"
                    android:src="@mipmap/brand_store_1"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <Button
                        android:id="@+id/galleryButton"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:layout_weight="5"
                        android:background="@drawable/shop_sign_up_button"
                        android:text="@string/select_images_gallery"
                        android:textColor="@color/white_line"

                        />

                    <Button
                        android:id="@+id/cameraButton"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:layout_weight="5"
                        android:background="@drawable/shop_sign_up_button"
                        android:text="@string/take_picture"

                        android:textColor="@color/white_line" />

                </LinearLayout>


                <Button
                    android:id="@+id/registerShop"
                    style="@style/Base.Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="12dp"
                    android:background="@drawable/shop_sign_up_button"
                    android:text="@string/register_shop"
                    android:textColor="@color/white_line"

                    />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</RelativeLayout>