<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearlayoutLoginShop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:orientation="vertical"
        android:id="@+id/linearlayout"

        android:padding="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="20"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_weight="4"
                android:id="@+id/backButton"
                android:src="@drawable/ic_arrow_back_white_24dp"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="16"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="SHop Login"
                android:textAllCaps="true"
                android:textColor="@color/white_line"
                android:textSize="18dp" />

        </LinearLayout>

        <!--
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="4dp"
                    android:src="@mipmap/brand_store_logo" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="@string/login_description"
                    android:textColor="@color/white_line" />
        -->


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textColorHint="@color/white_line"
            app:hintTextAppearance="@style/EditTextLayoutTheme2">

            <EditText
                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_mobile"
                android:inputType="phone"
                android:maxLength="10"
                android:textColor="@color/white_line"
                android:theme="@style/EditTextTheme2"
                android:textColorHint="@color/white_line"
                android:padding="8dp" />
        </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_margin="4dp"
                android:layout_height="wrap_content"
                android:textColorHint="@color/white_line"
                app:hintTextAppearance="@style/EditTextLayoutTheme2">

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/shop_hint_password"
                    android:inputType="textPassword"
                    android:textColor="@color/white_line"
                    android:textColorHint="@color/white_line"
                    android:theme="@style/EditTextTheme2" />

            </android.support.design.widget.TextInputLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="20"
    android:layout_marginBottom="50dp"
    android:orientation="horizontal">
    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="8"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/forgot_password_button"
        android:text="Forgot Password"
        android:textSize="@dimen/small_text_size"
        android:textColor="@color/white_line"/>
</LinearLayout>

            <Button
                android:id="@+id/button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/rounded_button"
                android:gravity="center"
                android:padding="12dp"
                android:text="@string/shop_login"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/buttonSignUp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:background="@drawable/rounded_button"
                android:gravity="center"
                android:padding="12dp"
                android:text="@string/shop_login_new"

                android:textColor="@color/white" />
        </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:visibility="gone" />


</RelativeLayout>
