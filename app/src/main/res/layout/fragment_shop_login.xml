                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:textColor="@color/color_shop_accent"
                    android:text="@string/shop_login_textview"
                    android:textSize="@dimen/medium_text_size"
                    android:layout_marginBottom="50dp"
                    />


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:textColorHint="@color/color_shop_accent"
                    app:hintTextAppearance="@style/EditTextLayoutTheme"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_mobile"
                        android:inputType="phone"
                        android:textColor="@color/color_shop_accent"
                        android:textColorHint="@color/color_shop_accent"
                        android:theme="@style/EditTextTheme"
                        android:maxLength="10"
                        android:textSize="@dimen/small_text_size"
                        />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:textColorHint="@color/color_shop_accent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextAppearance="@style/EditTextLayoutTheme"
                    android:layout_marginBottom="50dp">

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/shop_hint_password"
                        android:textColor="@color/color_shop_accent"
                        android:textColorHint="@color/color_shop_accent"
                        android:theme="@style/EditTextTheme"
                        android:inputType="textPassword" />

                </android.support.design.widget.TextInputLayout>

                <Button
                    android:layout_marginTop="50dp"
                    android:id="@+id/button"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="12dp"
                    android:background="@drawable/rounded_button"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="@string/shop_login"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/buttonSignUp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="12dp"
                    android:background="@drawable/rounded_button"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="@string/shop_login_new"

                    android:textColor="@color/white" />

            </LinearLayout>
