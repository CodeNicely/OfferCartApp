<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentPadding="8dp"
        app:cardCornerRadius="4dp"
        android:layout_margin="4dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00ffffff"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:scaleType="fitXY"
                android:id="@+id/image"

                />
            <LinearLayout
                android:weightSum="10"
                android:padding="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_weight="6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Offer Title"
                android:textColor="#000000"
                android:layout_gravity="start"
                android:id="@+id/offer_title"
                android:textSize="24dp"
                />

                <TextView
                    android:layout_weight="4"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Price: Rs.15"
                    android:textStyle="bold"
                    android:textColor="#424242"
                    android:id="@+id/offer_cost"
                    android:textSize="18dp"
                    />
                </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is the offer description"
                android:id="@+id/offer_description"
                android:textSize="18dp"
                android:textColor="#282828"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Offer Valid till 30th Nov."
                android:id="@+id/offer_validity"
                android:textSize="12dp"
                android:textColor="@color/colorAccent"
                />

        <Button
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:id="@+id/buy"
            android:textColor="@color/white"
            android:text="Buy Now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        </LinearLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>