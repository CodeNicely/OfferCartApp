    <style name="AppThemeUser" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:typeface">serif</item>
        <!--<item name="android:windowBackground">@drawable/app_background</item>-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeShop" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:typeface">serif</item>
        <!--<item name="android:windowBackground">@drawable/app_background</item>-->
        <item name="colorPrimary">@color/color_shop_primary</item>
        <item name="colorPrimaryDark">@color/color_shop_primary_dark</item>
        <item name="colorAccent">@color/white_line</item>
    </style>


    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ExpandedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">32dp</item>
        <item name="android:textColor">@color/transparent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">serif</item>

    </style>

    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/transparent</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">serif</item>

    </style>

    <style name="ExpandedAppBarPlus1" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">32dp</item>
        <item name="android:textColor">@color/transparent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">serif</item>

    </style>

    <style name="CollapsedAppBarPlus1" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">serif</item>

    </style>


    <style name="EditTextTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/white_line</item>
        <item name="colorControlActivated">@color/white_line</item>
        <item name="colorControlHighlight">@color/white_line</item>
    </style>

    <style name="EditTextLayoutTheme" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white_line</item>
    </style>

</resources>

