<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.codenicely.discountstore.project_new">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <application
        android:name=".helper.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/brand_store_logo_new"
        android:label="@string/app_name"
        android:supportsRtl="true"

        >

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- Splash screen -->
        <activity
            android:name=".splash_screen.view.SplashScreenActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeUser"

            >


            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>


        </activity>

        <!--
                <meta-data
                    android:name="com.google.android.gms.version"
                    android:value="@integer/google_play_services_version"/>
        -->


        <activity
            android:name=".home.HomePage"
            android:theme="@style/AppThemeUser"

            >

        </activity>

        <activity
            android:name=".shop_admin.shop_home.ShopHomePage"
            android:theme="@style/AppThemeShop"

            >
            <!--
                        <intent-filter>
                            <action android:name="android.intent.action.MAIN" />

                            <category android:name="android.intent.category.LAUNCHER" />

                        </intent-filter>-->

        </activity>
        <!-- Main activity -->

        <activity
            android:name=".login.view.LoginScreenActivity"
            android:theme="@style/AppThemeUser"

            />
        <activity
            android:name=".verify_otp.view.OtpViewImpl"
            android:theme="@style/AppThemeUser"

            />
        <activity
            android:name=".welcome_screen.view.WelcomeScreenActivity"
            android:label="@string/app_name"
            android:theme="@style/AppThemeUser"

            />

        <service android:name=".helper.MyFirebaseService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".wallet.view.WalletActivity"
            android:theme="@style/AppThemeUser"

            />
        <activity
            android:name=".payment.view.PaymentActivity"
            android:theme="@style/AppThemeShop"

            />
        <activity
            android:name=".shop_admin.shop_activity.ShopActivity"
            android:theme="@style/AppThemeShop"

            />

        <activity
            android:name="com.paytm.pgsdk.PaytmPGActivity"
            android:configChanges="keyboardHidden|orientation|keyboard"
            android:screenOrientation="portrait" />

    </application>

</manifest>